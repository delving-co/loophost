    "version": "0.2.0",
    "configurations": [
        {
            "name": "SITE",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/site",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                // "--host=unix:///tmp/flingdev.soc"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "LOCAL",
            "type": "python",
            "request": "launch",
            "module": "loophost.flingroute",
            "cwd": "${workspaceFolder}/client",
            "jinja": true,
            "justMyCode": true
        },
    ]
}